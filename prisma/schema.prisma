generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"

  // Connection URLs for Migrate and the Prisma Client are no longer supported in schema files.
  // Move migration connection URLs to prisma.config.ts and pass adapter or accelerateUrl to the PrismaClient.
